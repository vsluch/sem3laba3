<Window x:Class="sem3laba3.MarketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Маркет - Сбор колод" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Информация о текущем игроке -->
        <Border Grid.Row="0" Background="#f0f0f0" Padding="10">
            <StackPanel>
                <TextBlock x:Name="CurrentPlayerText" 
                           Text="Выбирает: Игрок 1" 
                           FontSize="18" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="PowerInfoText" 
                           Text="Мощность: 0/100" 
                           FontSize="14"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Доступные карты -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="Доступные карты" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>

                    <ScrollViewer Height="350" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="AvailableCardsPanel">
                            <!-- Карты будут добавляться динамически -->
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>

            <!-- Карты в руке -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock x:Name="HandTitle" 
                               Text="Рука Игрока 1" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>

                    <ScrollViewer Height="350" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="PlayerHandPanel">
                            <!-- Карты в руке будут добавляться динамически -->
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Кнопки управления -->
        <Border Grid.Row="2" Background="#f0f0f0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="NextPlayerButton" 
                        Content="Завершить выбор (передать ход)" 
                        Click="NextPlayerButton_Click" 
                        Width="250" 
                        Height="40"
                        FontSize="14"
                        Margin="0,0,20,0"/>

                <Button x:Name="StartGameButton" 
                        Content="Начать игру!" 
                        Click="StartGameButton_Click" 
                        Width="200" 
                        Height="40"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>