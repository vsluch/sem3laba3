<Window x:Class="sem3laba3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Card Game - WPF Version" 
        Height="750" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель инструментов - ряд 1 -->
        <Border Grid.Row="0" Background="#f0f0f0" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая часть - кнопки игрока 1 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5">
                    <Button x:Name="StartButton" Content="Начать игру" 
                            Click="StartButton_Click" 
                            Margin="2" Padding="10,5" FontWeight="Bold" Width="120"/>
                    <Button x:Name="SaveButton" Content="Сохранить" 
                            Click="SaveButton_Click" 
                            Margin="2" Padding="10,5" Width="100"/>
                    <Separator Width="15"/>
                    <Button x:Name="PlayCardButton1" Content="Разыграть карту" 
                            Click="PlayCardButton1_Click" 
                            Margin="2" Padding="10,5" Width="150"/>
                    <Button x:Name="AttackButton1" Content="Атаковать" 
                            Click="AttackButton1_Click" 
                            Margin="2" Padding="10,5" Width="120"/>
                    <Button x:Name="PlaySpellButton1" Content="Разыграть заклинание" 
                            Click="PlaySpellButton1_Click" 
                            Margin="2" Padding="10,5" Width="150"/>
                </StackPanel>

                <!-- Центральный разделитель -->
                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5,5" Height="30"/>

                <!-- Правая часть - кнопки игрока 2 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                    <Button x:Name="PlayCardButton2" Content="Разыграть карту" 
                            Click="PlayCardButton2_Click" 
                            Margin="2" Padding="10,5" Width="150"/>
                    <Button x:Name="AttackButton2" Content="Атаковать" 
                            Click="AttackButton2_Click" 
                            Margin="2" Padding="10,5" Width="120"/>
                    <Button x:Name="PlaySpellButton2" Content="Разыграть заклинание" 
                            Click="PlaySpellButton2_Click" 
                            Margin="2" Padding="10,5" Width="150"/>
                    <Separator Width="15"/>
                    <TextBlock x:Name="TurnIndicator" Text="Нажми 'Начать игру'" 
                              VerticalAlignment="Center" FontWeight="Bold" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Второй ряд - кнопки пропуска хода -->
        <Border Grid.Row="1" Background="#e0e0e0" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка пропуска хода игрока 1 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5">
                    <Button x:Name="SkipTurnButton1" Content="Пропустить ход (Игрок 1)" 
                            Click="SkipTurnButton1_Click" 
                            Margin="2" Padding="10,5" Width="180"
                            Background="#FF9800" Foreground="White"/>
                </StackPanel>

                <!-- Центральный разделитель -->
                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5,5" Height="30"/>

                <!-- Кнопка пропуска хода игрока 2 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                    <Button x:Name="SkipTurnButton2" Content="Пропустить ход (Игрок 2)" 
                            Click="SkipTurnButton2_Click" 
                            Margin="2" Padding="10,5" Width="180"
                            Background="#FF9800" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Игровая информация -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Игрок 1 -->
            <Border Grid.Column="0" BorderBrush="Blue" BorderThickness="2">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="ИГРОК 1" FontSize="16" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Foreground="Blue" Margin="0,0,0,10"/>

                        <TextBlock x:Name="Player1Info" Text="" Margin="0,0,0,10" TextWrapping="Wrap"
                                   FontSize="12"/>

                        <GroupBox Header="Карты в руке" Margin="0,0,0,10">
                            <ListBox x:Name="Player1HandList" Height="100" Margin="5" SelectionMode="Single"/>
                        </GroupBox>

                        <GroupBox Header="Существа на поле" Margin="0,0,0,10">
                            <ListBox x:Name="Player1CreaturesList" Height="120" Margin="5" SelectionMode="Single"/>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>

            <!-- Игрок 2 -->
            <Border Grid.Column="2" BorderBrush="Red" BorderThickness="2">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="ИГРОК 2" FontSize="16" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Foreground="Red" Margin="0,0,0,10"/>

                        <TextBlock x:Name="Player2Info" Text="" Margin="0,0,0,10" TextWrapping="Wrap"
                                   FontSize="12"/>

                        <GroupBox Header="Карты в руке" Margin="0,0,0,10">
                            <ListBox x:Name="Player2HandList" Height="100" Margin="5" SelectionMode="Single"/>
                        </GroupBox>

                        <GroupBox Header="Существа на поле" Margin="0,0,0,10">
                            <ListBox x:Name="Player2CreaturesList" Height="120" Margin="5" SelectionMode="Single"/>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Лог и статус -->
        <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <Grid Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="120">
                    <TextBlock x:Name="GameLog" Text="" TextWrapping="Wrap"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>